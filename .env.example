# Event Networking App - Environment Variables
# Copy this file to .env and update with your values

# App Configuration
REACT_APP_NAME=Campus Connect
REACT_APP_VERSION=1.0.0
REACT_APP_ENV=development

# API Configuration
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_API_TIMEOUT=30000

# Authentication
REACT_APP_JWT_SECRET=your-secret-key-here
REACT_APP_SESSION_TIMEOUT=3600000

# Firebase (Optional - for real-time features)
REACT_APP_FIREBASE_API_KEY=your-firebase-api-key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-app.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-app.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
REACT_APP_FIREBASE_APP_ID=your-app-id

# Analytics
REACT_APP_GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
REACT_APP_ENABLE_ANALYTICS=false

# Feature Flags
REACT_APP_ENABLE_LIVE_SESSIONS=true
REACT_APP_ENABLE_QR_SCANNER=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_DARK_MODE=true

# Social Media Links
REACT_APP_FACEBOOK_URL=https://facebook.com/campusconnect
REACT_APP_TWITTER_URL=https://twitter.com/campusconnect
REACT_APP_INSTAGRAM_URL=https://instagram.com/campusconnect
REACT_APP_LINKEDIN_URL=https://linkedin.com/company/campusconnect

# Support
REACT_APP_SUPPORT_EMAIL=support@campusconnect.com
REACT_APP_SUPPORT_PHONE=+1-234-567-8900

# Deployment
PUBLIC_URL=/campus-connect
GENERATE_SOURCEMAP=false
